CREATE TABLE weights (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    date TEXT UNIQUE NOT NULL,  -- Stored as ISO 8601 string (e.g., "2025-02-28")
    weight REAL NOT NULL
);

