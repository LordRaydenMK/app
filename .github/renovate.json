{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "androidx",
      "matchPackageNames": [
        "/androidx.*/"
      ]
    },
    {
      "groupName": "androidx.compose",
      "matchPackageNames": [
        "/androidx.compose.*/"
      ]
    },
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/androidx.compose.compiler:compiler/"
      ]
    },
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/org.jetbrains.kotlin.*/"
      ]
    }
  ]
}
